<%- include('layout-top'); -%>
<h1>Category : <%=category.category_name%></h1>
<div style="margin-left:20px;margin-top:20px">
  <h4>Items</h4>
  <dl>
    <% if(category_items.length> 0) { %>
    <%    category_items.forEach(item=>{ %>

    <dt><a href="<%=item.url%>">
        <%=item.name%>
      </a>
    </dt>
    <!-- <dd>
      <em>Price:<%=item.price%></em>
    </dd> -->
    <dd>
      <em>Available qty:<%=item.stock%></em>
    </dd>
    <dd>
      <%=item.description%>
    </dd>
    <hr>

    <%} )%>

    <% } else {%>
    <p>-- No item to display --</p>
    <% }%>
  </dl>
</div>

<hr>
<p><a href="<%=category.url+'/delete'%>">Delete category</a></p>
<p><a href="<%=category.url+'/update'%>">Update category</a></p>
<%- include('layout-end'); -%>