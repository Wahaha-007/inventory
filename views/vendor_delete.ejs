<%- include('layout-top'); -%>
<h1><%=title%>:<%=vendor.name%></h1>
<p><%=vendor.register_date_f%></p>

<%if(vendor_items.length) {%>
<p><strong>Delete the following items before attempting to delete this vendor.</strong></p>
<div style="margin-left:20px;margin-top:20px">
    <h4>Items</h4>
    <dl>
        <%vendor_items.forEach(item=>{%>
        <dt><a href="<%=item.url%>">
                <%=item.name%></a>
        </dt>
        <dd>
            <%=item.description%>
        </dd>
        <%})%>
    </dl>
</div>
<%} else {%>
<p>Do you really want to delete this Vendor?</p>
<form method="POST" action="">
    <div class="form-group">
        <input type="hidden" id="vendorid" class="form-control" name="vendorid" value="<%=vendor._id%>" required>
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%}%>

<%- include('layout-end'); -%>