<%- include('layout-top'); -%>
<h1><%=title%>:<%=category.category_name%></h1>
<p><%=category.description%></p>

<%if(category_items.length) {%>
<p><strong>Delete the following items before attempting to delete this category.</strong></p>
<div style="margin-left:20px;margin-top:20px">
    <h4>Items</h4>
    <dl>
        <%category_items.forEach(item=>{%>
        <dt><a href="<%=item.url%>">
                <%=item.name%></a>
        </dt>
        <dd>
            <%=item.description%>
        </dd>
        <%})%>
    </dl>
</div>
<%} else {%>
<p>Do you really want to delete this Category?</p>
<form method="POST" action="">
    <div class="form-group">
        <input type="hidden" id="categoryid" class="form-control" name="categoryid" value="<%=category._id%>" required>
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%}%>

<%- include('layout-end'); -%>